<h1>レビューの編集</h1>
<table class= "table table-striped">
<%= form_for @review, url:guest_review_path do |f| %>
<tr>
	<th>レビュー画像</th>
	<td> <%= f.attachment_field :review_image %></td>
</tr>
  <tr>
  	<th>レビュージャンル</th>
  	<td><%= f.collection_select(:ganre_id, Ganre.all, :id, :category) %></td>
  </tr>
  <tr>
  	<th>レビュータイトル</th>
  	<td><%= f.text_field :title %></td>
  </tr>
 <tr>
 	<th>レビュー本文</th>
 	<td><%= f.text_area :explanation %></td>
 </tr>
</table>
 <%= f.submit '編集する' %>
 <% end %>

<%= link_to "詳細へ戻る", guest_review_path(@review.id) %>/
<%= link_to "削除する", guest_review_path(@review.id), method: :delete,"data-confirm" => "本当に消しますか" %>

<div class="container">
	<div class="row">
		<div class="col-lg-4">

		</div>
	</div>
</div>