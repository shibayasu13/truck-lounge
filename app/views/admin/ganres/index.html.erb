
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル追加・一覧画面</h1>
      <%= form_for @ganre, url: admin_ganres_path do |f| %>
        <div class="name">ジャンル
        <%= f.text_field :category %>
        <%= f.radio_button(:class_status, "有効") %>
        <%= f.label(:class_status, "有効", value: "有効" ) %>
        <%= f.radio_button(:class_status, "無効") %>
        <%= f.label(:class_status, "無効", value: "無効") %>
        <%= f.submit "追加", class:"btn btn-info btn-lg" %>
        </div>
      <% end %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @ganres.each do |ganre| %>
          <tr>
            <td><%= ganre.category %></td>
            <td><%= ganre.class_status %></td>
            <td><%= link_to "編集する", edit_admin_ganre_path(ganre.id), class:"btn btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>




