
<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<h1>会員情報情報編集ページ</h1>
			<%= form_for @guest do |f| %>
				<table class= "table table-striped">
						<tr>
							<th>ニックネーム</th>
							<td><%=f.text_field :name%></td>
						</tr>
						<tr>
							<th>プロフィール画像</th>
							<td><%= f.attachment_field :profile_image %></td>
						</tr>
						<tr>
							<th>車両情報</th>
							<td><%= f.text_area :car %></td>
						</tr>
					</tbody>
				</table>
				<%= f.submit '編集する',class:"btn btn-success btn-lg" %>
			<% end %>
		</div>
		<div class="col-lg-4">
		</div>

	</div>
</div>