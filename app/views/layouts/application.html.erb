<!DOCTYPE html>
<html>
  <head>
    <title>TruckLounge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['API_KEY'] %>&callback=initMap"></script>
    <script src="https://kit.fontawesome.com/cbfed23428.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes&display=swap" rel="stylesheet">


</head>
  </head>

<body>
      <div id="container">
        <div class="row">
            <header class="navbar navar-fixed-top">
                <nav class="nav navbar-nav navbar-left">
                  <h1 class= "ha-title" ><%= link_to root_path do %>
                    <div class= "top-text" >
                    <i class="fas fa-truck-moving"></i>TruckLounge<i class="fas fa-truck-moving"></i></div>
                  <% end %>
                </h1>
                </nav>
                <nav>
                  <ul class="nav navbar-nav navbar-right">
                    <% if guest_signed_in? %>
                    <nav class="nav navbar-nav navar-center">
                     </li>
                    </nav>
                    <ul class="nav navbar-nav navbar-right">
                      <li class="">
                        <%= link_to "マイページ", guest_path(current_guest.id) %>
                      </li>
                      <li class="" >
                        <%= link_to "ログアウト",destroy_guest_session_path, method: :delete %>
                      </li>
                      <li class="">
                        <%= link_to "店舗情報新規登録", new_guest_lounge_path %>
                      </li>
                      <li class="">
                        <%= link_to "全国店舗情報一覧", guest_lounges_path %>
                      </li>
                    </ul>
                      <% elsif admin_signed_in? %>
                      <li class="" >
                        <%= link_to "会員一覧", admin_guests_path %>
                      </li>
                      <li class="">
                        <%= link_to "ジャンル一覧", admin_ganres_path %>
                      </li>
                      <li class="">
                        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                      </li>
                    <% else %>
                    <% end %>
                  </ul>
                </nav>
            </div>
          </header>
        </div>
      </div>
  <main>

      <%= content_for?(:content) ? yield(:content) : yield %>
  </main>
    <footer>
      <p> 株式会社　トラック坊や<p></footer>

</html>
