<div class="container" >
  <h1>ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="devise" ><%= f.label :メールアドレス %><br /></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <div class="devise" ><%= f.label :パスワード %><br /></div>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field"><div class="devise" >
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン",class:"btn btn-info btn-lg" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
