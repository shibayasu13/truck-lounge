
<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<table class = "table table-striped">
				<caption></caption>
				<thead>
					<caption>ゲスト情報</caption>
				</thead>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @guest, :profile_image, :fill,60,60, format: 'jpeg',fallback: "no_image.jpg",size: "100x100"  %></td>
					</tr>
					<tr>
						<td><%= @guest.name %></td>
					</tr>
					<tr>
						<td><%= @guest.car %></td>
					</tr>
				</tbody>
			</table>
			<%= link_to "編集する", edit_guest_path,class:"btn btn-success btn-lg" %>
		</div>
		<div class="col-lg-8">
			<table border="1" rules="rows,groups" class = "table table-striped">
			<caption>お気に入り一覧</caption>
			<thead>
				<th><i class="fas fa-camera" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-home" style = "font-size:50px" ></th>
				<th><i class="fas fa-map-marker-alt" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-coffee" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-parking" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-info-circle" style = "font-size:50px"></th>
				<th><i class="far fa-clock" style = "font-size:50px" ></i></th>
				<th></th>
			</thead>
			<% @fav_lounges.each do |lounge| %>

			<tbody>
				<td><%= attachment_image_tag lounge, :store_image, :fill,60,60, format: 'jpeg' %></td>
				<td class = "td-lounge"><%= lounge.store_name %></td>
				<td><%= lounge.prefecture %>
					<%= lounge.address_city %>
					<%= lounge.address_street %>
				</td>
				<td><%= lounge.content %></td>
				<td><%= lounge.parking %></td>
				<td><%= lounge.busines_status %></td>
				<td><%= lounge.business_hours %></td>
				<td><%= link_to "詳細", guest_lounge_path(lounge.id),class:"btn btn-info btn-xs" %></td>
			</tbody>
			<% end %>
		</table>
		<div class ="pagenate"><%= will_paginate @fav_lounges, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'  %></div>
		<table border="1" rules="rows,groups" class = "table table-striped">
			<caption>自身の投稿一覧</caption>
			<thead>
				<th><i class="fas fa-camera" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-home" style = "font-size:50px" ></th>
				<th><i class="fas fa-map-marker-alt" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-coffee" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-parking" style = "font-size:50px" ></i></th>
				<th><i class="fas fa-info-circle" style = "font-size:50px"></th>
				<th><i class="far fa-clock" style = "font-size:50px" ></i></th>
			</thead>
			<% @lounges.each do |lounge| %>

			<tbody>
				<td><%= attachment_image_tag lounge, :store_image, :fill,60,60, format: 'jpeg' %></td>
				<td><%= lounge.store_name %></td>
				<td><%= lounge.prefecture %>
					<%= lounge.address_city %>
					<%= lounge.address_street %>
				</td>
				<td><%= lounge.content %></td>
				<td><%= lounge.parking %></td>
				<td><%= lounge.busines_status %></td>
				<td><%= lounge.business_hours %></td>
				<td><%= link_to "詳細", guest_lounge_path(lounge.id),class:"btn btn-info btn-xs" %></td>
			</tbody>
			<% end %>

		</table>
		<div class ="pagenate"> <%= will_paginate @lounges, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'  %></div>
	</div>
	</div>
</div>